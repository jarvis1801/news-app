<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_height="wrap_content"    android:layout_width="match_parent">    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"        android:id="@+id/card_view"        android:layout_gravity="center"        android:layout_width="match_parent"        android:layout_height="wrap_content"        card_view:cardCornerRadius="20dp"        android:paddingRight="@dimen/listing_padding"        android:paddingLeft="@dimen/listing_padding"        android:layout_marginVertical="20dp"        android:layout_marginHorizontal="40dp">        <LinearLayout            style="@style/verticalLinearLayout">            <ImageView                tools:src="@drawable/ic_launcher_background"                android:scaleType="centerCrop"                android:id="@+id/img_thumbnail"                android:layout_height="200dp"                android:layout_width="match_parent" />            <LinearLayout                style="@style/verticalLinearLayout"                android:padding="@dimen/listing_padding">                <TextView                    android:id="@+id/tv_title"                    tools:text="In brief: Winter; Tirzah and the Prince of Crows; State of Play â€“ review"                    style="@style/itemListingTitle" />                <TextView                    android:id="@+id/tv_section"                    tools:text="Education"                    style="@style/itemListingSection" />                <TextView                    android:id="@+id/tv_date"                    tools:text="2019-01-17"                    style="@style/itemListingDate" />                itemListingTextView            </LinearLayout>        </LinearLayout>    </android.support.v7.widget.CardView></LinearLayout>