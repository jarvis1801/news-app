<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto">    <ScrollView        android:id="@+id/sv_scroll"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        android:layout_height="match_parent"        android:layout_width="match_parent"        android:fillViewport="true"        android:padding="20dp">        <LinearLayout            android:orientation="vertical"            android:layout_height="match_parent"            android:layout_width="match_parent">            <com.listing.book.jarvis.newsapp.ImageSlider.CustomPager                android:id="@+id/vp_image_slider"                android:layout_height="200dp"                android:layout_marginBottom="20dp"                android:layout_width="match_parent" />            <TextView                android:id="@+id/tv_content"                android:layout_height="wrap_content"                android:layout_width="match_parent" />        </LinearLayout>    </ScrollView></android.support.constraint.ConstraintLayout>